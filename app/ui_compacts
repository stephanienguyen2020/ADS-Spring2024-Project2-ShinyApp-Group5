ui <- fluidPage(
  titlePanel("Data Visualizations"),
  sidebarLayout(
    sidebarPanel(
      selectInput("plotType", "Choose a plot:",
                  choices = c("Total Award Amount by Vendor State",
                              "Number of Fire Incidents by State",
                              "Total Fire Disaster Numbers by Fiscal Year",
                              "Total Award Amount by Fiscal Year"))
    ),
    mainPanel(
      plotOutput("selectedPlot")
    )
  )
)
